import streamlit as st

# Force override Streamlit's full background using correct targets
st.markdown("""
    <style>
        /* Target main background container */
        .stApp {
            background-color: #f7f7f7 !important;  /* Soft gray */
        }

        /* Override central block background */
        .block-container {
            background-color: #f7f7f7 !important;
            color: #1c1c1c !important;
        }

        /* Adjust input and text */
        input, textarea {
            background-color: #ffffff !important;
            color: #000000 !important;
        }

        h1, h2, h3, label, .stTextInput > label {
            color: #111111 !important;
        }

        /* Fix for slider track */
        .stSlider > div {
            background-color: #e6e6e6 !important;
        }

        /* Custom result box */
        .result {
            font-size: 18px;
            background-color: #e0f7fa;
            color: #004d40;
            border: 2px solid #26c6da;
            padding: 10px;
            border-radius: 6px;
            display: inline-block;
        }
    </style>
""", unsafe_allow_html=True)

# Title
st.title("Culvert Pipe Set Calculator")

# Inputs
pipe_size = st.number_input("Pipe Size (inches)", value=15, step=1, format="%.0f")
cover = st.number_input("Cover (inches)", value=9, step=1, format="%.0f")
ratio = st.slider("Ratio (e.g., 4 for 4:1)", min_value=1, max_value=10, value=4)

# Calculation
set_length = (pipe_size + cover) * ratio / 12
added_inches = pipe_size + 12

# Display result
st.markdown("<h3>Set Length (feet)</h3>", unsafe_allow_html=True)
st.markdown(f"<div class='result'>Set Length: {round(set_length, 2)} feet</div>", unsafe_allow_html=True)

# Extra dimension
st.markdown("<h3>Diameter + 12\" (inches)</h3>", unsafe_allow_html=True)
st.markdown(f"<div class='result'>Diameter + 12: {int(added_inches)} inches</div>", unsafe_allow_html=True)

# Notes
st.markdown("### Notes")
st.write("""
1. Add the pipe diameter (Pipe Size) to the cover.
2. Multiply the result by the ratio (e.g., 4:1 or 6:1).
3. Divide by 12 to convert inches to feet.
4. The result is the Set Length in feet.
5. The "Diameter + 12" is simply the entered Pipe Size plus 12 inches.
""")
